  </body>
  <script>
    function CerrarSesion() {
      fetch('/user/logout', { method: 'POST' })
        .then((response) => response.json())
        .then((data) => {
          if (data.success) {
            window.location.href = '/login';
          } else {
            alert(data.error);
          }
        });
    }

    function Reportes() {
      window.location.href = '/admin/reportes';
    }
  </script>
</html>
